	body
		include navbar.pug
		div(class="container-fluid")
			form(method="POST" action="/eventForm" enctype="multipart/form-data")
				div(class="row form-group")
					div(class="col-lg-5 col-lg-offset-1" id="a")
						input(id="eventname" class="form-control" type="text" name="eventname" placeholder="Name of the event")
					div(class="col-lg-5" id="b")
						input(id="date" class="form-control" type="date" name="date" placeholder="")
						label Time:
						input(id="time" class="form-control" type="integer" name="time" placeholder="")
						label to:
						input(id="to" class="form-control" type="integer" name="totime" placeholder="")
						input(id="price" class="form-control" type="integer" min="0" max="10000" step="1" name="price" placeholder="\u20AC")
				div(class="row form-group")
					div(class="col-lg-5 col-lg-offset-1" id="c")
						input(id="partylink" class="form-control" type="url" name="partylink" placeholder="Party link")
					div(class="col-lg-5" id="d")
						input(id="ticketlink" class="form-control" type="url" name="ticketlink" placeholder="Ticket link")
				div(class="row form-group")
					div(class="col-lg-3 col-lg-offset-1" id="e")
						input(id="venue" class="form-control" type="text" name="venue" placeholder="Venue")
					div(class="col-lg-4" id="f")
						input(id="location" class="form-control" type="text" name="location" placeholder="Location")
					div(class="col-lg-3" id="g")
						input(id="city" class="form-control" type="text" name="city" placeholder="City")
				div(class="row form-group")
					div(class="col-lg-3 col-lg-offset-1" id="h")
						label(id="uploadtext") Upload a picture of the event
					div(class="col-lg-3" id="i")
						input(id="pic" class="form-control" type="file" name="eventpicture")
					div(class="col-lg-3 col-lg-offset-1" id="j")
						input(id="genre" name="musictype" type="text" class="form-control" placeholder="Genres")
				div(class="row form-group")
					div(class="col-lg-10 col-lg-offset-1" id="k")
						textarea(id="info" class="form-control" type="text" name="info" placeholder="More information...")
				div(class="row form-group")
					div(class="col-lg-2 col-lg-offset-5" id="l")
						button(id="eventbtn" type="submit" class="btn btn-light") Add event

